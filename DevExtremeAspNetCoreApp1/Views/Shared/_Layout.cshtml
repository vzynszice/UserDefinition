<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    @await Html.PartialAsync("_HeadScripts")
    <!-- CSS Styles - Önce tüm CSS'ler -->
    <link rel="stylesheet" href="https://cdn3.devexpress.com/jslib/23.1.6/css/dx.light.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    
    <!-- JavaScript Libraries - Sıralama önemli -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        // DevExtreme sürüm kontrolü için
        var DevExpress = DevExpress || {};
        DevExpress.utils = DevExpress.utils || {};
        DevExpress.assertDevExtremeVersion = function() { return true; };
    </script>
    <script src="https://cdn3.devexpress.com/jslib/23.1.6/js/dx.all.js"></script>
    <script src="https://cdn3.devexpress.com/jslib/23.1.6/js/dx.aspnet.data.js"></script>
    <script src="https://cdn3.devexpress.com/jslib/23.1.6/js/dx.aspnet.mvc.js"></script>
   
</head>
<body class="@ViewData["BodyClass"]">
    <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
                <img src="~/assets/hyundailogo.png" alt="Logo" style="max-height: 40px;">
            </a>

            @if (User.Identity.IsAuthenticated)
            {
                <div class="ms-auto">
                    <form id="logoutForm" class="d-inline" asp-action="Logout" asp-controller="Account" method="post">
                        <span class="navbar-text me-3">
                            Hoşgeldin, @User.Identity.Name
                        </span>
                        <button type="submit" class="logout-button">
                            <i class="bi bi-box-arrow-right"></i> Çıkış
                        </button>
                    </form>
                </div>
            }
            else if (ViewData["Title"]?.ToString() == "Car Damage Assessment")
            {
                <div class="ms-auto d-flex align-items-center">
                    <span class="navbar-text me-3">
                        Car Plate: @ViewData["CarPlate"]
                    </span>
                    <a href="@Url.Action("CarLogin", "Car")" class="logout-button">
                        <i class="bi bi-box-arrow-left"></i> Back to Car Login
                    </a>
                </div>
            }
        </div>
    </nav>
    <div class="container-fluid main-content">
        @RenderBody()
    </div>

    <link rel="stylesheet" href="~/css/Layout/Layout.css" />

    <!-- Bootstrap JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>